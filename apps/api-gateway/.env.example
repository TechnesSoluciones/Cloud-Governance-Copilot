# API Gateway Configuration
NODE_ENV=development
API_PORT=4000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/copilot_db

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS
CORS_ORIGIN=http://localhost:3000

# Frontend URL (for password reset emails)
FRONTEND_URL=http://localhost:3000

# Encryption (for cloud credentials)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Asset Discovery Job Configuration
ASSET_DISCOVERY_INTERVAL=15      # Discovery interval in minutes (default: 15)
ASSET_DISCOVERY_ENABLED=true     # Enable/disable background discovery job

# Azure Advisor Configuration
AZURE_ADVISOR_ENABLED=true                # Enable Azure Advisor integration
AZURE_TENANT_ID=your-azure-tenant-id      # Azure AD Tenant ID
AZURE_CLIENT_ID=your-azure-client-id      # Service Principal Client ID (App ID)
AZURE_CLIENT_SECRET=your-azure-secret     # Service Principal Client Secret
AZURE_SUBSCRIPTION_ID=your-subscription   # Azure Subscription ID

# Azure Advisor Testing (Optional)
TEST_ADVISOR_GENERATE=false               # Set to 'true' to trigger recommendation generation in tests
