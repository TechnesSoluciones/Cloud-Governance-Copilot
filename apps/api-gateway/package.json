{
  "name": "@copilot/api-gateway",
  "version": "1.1.1",
  "description": "Cloud Governance Copilot - API Gateway",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text-summary --coverageReporters=lcov --coverageReporters=json-summary",
    "test:unit": "jest --testPathPattern='__tests__' --testPathIgnorePatterns='tests/' --maxWorkers=4",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.test.ts' --runInBand",
    "test:e2e": "jest --testMatch='**/tests/e2e/**/*.test.ts' --runInBand",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:verbose": "VERBOSE_TESTS=true jest --verbose",
    "test:security": "npm audit && echo 'Note: Install Snyk for advanced security scanning'",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "benchmark:queries": "tsx scripts/benchmark-queries.ts"
  },
  "dependencies": {
    "@aws-sdk/client-cost-explorer": "^3.946.0",
    "@aws-sdk/client-ec2": "^3.946.0",
    "@aws-sdk/client-iam": "^3.947.0",
    "@aws-sdk/client-rds": "^3.946.0",
    "@aws-sdk/client-s3": "^3.947.0",
    "@azure/arm-advisor": "^3.2.0",
    "@azure/arm-compute": "^23.2.0",
    "@azure/arm-costmanagement": "^1.0.0-beta.1",
    "@azure/arm-network": "^35.0.0",
    "@azure/arm-policy": "^6.0.0",
    "@azure/arm-resourcegraph": "^4.2.1",
    "@azure/arm-resourcehealth": "^4.0.0",
    "@azure/arm-security": "^5.0.0",
    "@azure/arm-storage": "^19.1.0",
    "@azure/identity": "^4.13.0",
    "@azure/monitor-query": "^1.3.3",
    "@prisma/client": "^5.7.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.65.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "openai": "^4.24.1",
    "qrcode": "^1.5.3",
    "redis": "^4.6.12",
    "speakeasy": "^2.0.0",
    "stripe": "^14.10.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@azure/arm-monitor": "^7.0.0",
    "@faker-js/faker": "^10.1.0",
    "@jest/globals": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0",
    "prisma": "^5.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
