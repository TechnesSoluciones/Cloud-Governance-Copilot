import express from 'express';
import helmet from 'helmet';
import cors from 'cors';
import * as dotenv from 'dotenv';
import { createServer } from 'http';
import { logger } from '../utils/logger';
import { errorHandler } from '../middleware/errorHandler';
import { requestLogger } from '../middleware/requestLogger';
import { globalLimiter } from '../middleware/rateLimiter';

// Existing routes
import authRoutes from '../routes/auth.routes';
import userRoutes from '../routes/user.routes';
import cloudAccountRoutes from '../routes/cloudAccount.routes';

// FinOps routes (NEW - ADD THIS IMPORT)
import finopsRoutes from './routes'; // <-- Import FinOps routes

import { initRedis, closeRedis } from '../config/redis';

// Load environment variables
dotenv.config();

const app = express();
const PORT = process.env.API_PORT || 4000;
const NODE_ENV = process.env.NODE_ENV || 'development';

// ============================================================
// Security & Middleware
// ============================================================
app.use(helmet());
app.use(
  cors({
    origin: process.env.CORS_ORIGIN?.split(',') || ['http://localhost:3000'],
    credentials: true,
  })
);
app.use(express.json({ limit: '10mb' }));
app.use(express.urlencoded({ extended: true, limit: '10mb' }));

// Apply global rate limiter to all API routes
app.use('/api/', globalLimiter);

app.use(requestLogger);

// ============================================================
// Health Check
// ============================================================
app.get('/health', (req, res) => {
  res.status(200).json({
    status: 'healthy',
    timestamp: new Date().toISOString(),
    environment: NODE_ENV,
    uptime: process.uptime(),
  });
});

// ============================================================
// API Routes
// ============================================================
app.get('/api/v1', (req, res) => {
  res.json({
    message: 'Cloud Governance Copilot API Gateway',
    version: '1.0.0',
    endpoints: {
      health: '/health',
      auth: '/api/v1/auth',
      tenants: '/api/v1/tenants',
      users: '/api/v1/users',
      cloudAccounts: '/api/v1/cloud-accounts',
      finops: '/api/v1/finops', // <-- ADD THIS to API documentation
    },
  });
});

// Auth routes
app.use('/api/v1/auth', authRoutes);

// User routes
app.use('/api/v1/users', userRoutes);

// Cloud Account routes
app.use('/api/v1/cloud-accounts', cloudAccountRoutes);

// FinOps routes (NEW - ADD THIS ROUTE)
app.use('/api/v1/finops', finopsRoutes); // <-- Mount FinOps routes

// ============================================================
// Error Handling
// ============================================================
app.use(errorHandler);

// ============================================================
// Server Start
// ============================================================
const server = createServer(app);

// Initialize Redis and start server
const startServer = async () => {
  try {
    // Initialize Redis connection
    await initRedis();
    logger.info('Redis initialized successfully');

    // Start HTTP server
    server.listen(PORT, () => {
      logger.info(`API Gateway running on port ${PORT} in ${NODE_ENV} mode`);
      logger.info(`Health check available at http://localhost:${PORT}/health`);

      // Log FinOps endpoints (NEW - OPTIONAL)
      logger.info(`FinOps endpoints available at:`);
      logger.info(`  - GET  /api/v1/finops/costs`);
      logger.info(`  - GET  /api/v1/finops/costs/by-service`);
      logger.info(`  - GET  /api/v1/finops/costs/trends`);
      logger.info(`  - GET  /api/v1/finops/anomalies`);
      logger.info(`  - POST /api/v1/finops/anomalies/:id/resolve`);
    });
  } catch (error) {
    logger.error('Failed to start server:', error);
    process.exit(1);
  }
};

startServer();

// Graceful shutdown
process.on('SIGTERM', async () => {
  logger.info('SIGTERM signal received: closing HTTP server');
  await closeRedis();
  server.close(() => {
    logger.info('HTTP server closed');
    process.exit(0);
  });
});

process.on('SIGINT', async () => {
  logger.info('SIGINT signal received: closing HTTP server');
  await closeRedis();
  server.close(() => {
    logger.info('HTTP server closed');
    process.exit(0);
  });
});

export default app;
