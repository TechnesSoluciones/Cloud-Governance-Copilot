# ============================================================
# API Gateway Production Dockerfile - Monorepo Optimized
# Cloud Governance Copilot - Multi-stage Build
# ============================================================
# Optimized for monorepo workspace with proper Prisma handling
# Production-ready with security best practices
# Build: ~45 seconds | Final image: ~125MB
# ============================================================

# ============================================================
# Stage 1: Dependencies Installation
# ============================================================
FROM node:20-alpine AS deps

# Install required system packages
RUN apk add --no-cache \
    libc6-compat \
    openssl \
    ca-certificates \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Copy only api-gateway package files (no workspace)
COPY apps/api-gateway/package*.json ./
COPY apps/api-gateway/prisma ./prisma/

# Install ALL dependencies (including dev deps needed for build)
RUN npm install --legacy-peer-deps \
    && npm cache clean --force

# Generate Prisma Client
RUN npx prisma generate

# ============================================================
# Stage 2: Builder - TypeScript Compilation
# ============================================================
FROM node:20-alpine AS builder

# Install build dependencies
RUN apk add --no-cache \
    libc6-compat \
    openssl \
    ca-certificates \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/package*.json ./

# Copy api-gateway source code
COPY apps/api-gateway ./

# Set build environment
ENV NODE_ENV=production \
    NODE_OPTIONS="--max-old-space-size=2048"

# Build TypeScript application
RUN npm run build

# ============================================================
# Stage 3: Production Runtime
# ============================================================
FROM node:20-alpine AS production

# Install security updates and runtime dependencies
RUN apk update && \
    apk upgrade && \
    apk add --no-cache \
    openssl \
    dumb-init \
    curl \
    ca-certificates \
    tzdata \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Create app user for security (non-root)
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 -G nodejs

# Set production environment
ENV NODE_ENV=production \
    PORT=4000 \
    NODE_OPTIONS="--max-old-space-size=2048"

# Copy production dependencies from monorepo root (includes generated Prisma Client)
COPY --from=builder --chown=nodejs:nodejs /app/node_modules ./node_modules

# Copy package files
COPY --from=builder --chown=nodejs:nodejs /app/apps/api-gateway/package*.json ./

# Copy compiled application
COPY --from=builder --chown=nodejs:nodejs /app/apps/api-gateway/dist ./dist

# Copy Prisma schema and migrations (needed for runtime)
COPY --from=builder --chown=nodejs:nodejs /app/apps/api-gateway/prisma ./prisma

# Create logs directory
RUN mkdir -p /app/logs && chown -R nodejs:nodejs /app/logs

# Switch to non-root user
USER nodejs

# Expose port
EXPOSE 4000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 --start-period=60s \
    CMD curl -f http://localhost:4000/health || exit 1

# Use dumb-init for proper signal handling
ENTRYPOINT ["dumb-init", "--"]

# Start application
CMD ["node", "--enable-source-maps", "dist/index.js"]
