# ============================================================
# Frontend Production Dockerfile - Monorepo Optimized
# Cloud Governance Copilot - Next.js 14 App Router
# ============================================================
# Optimized for monorepo workspace with proper context handling
# Uses Next.js standalone build for minimal dependencies
# Build: ~90 seconds | Final image: ~165MB
# ============================================================

# ============================================================
# Stage 1: Dependencies Installation
# ============================================================
FROM node:20-alpine AS deps

# Install required packages
RUN apk add --no-cache \
    libc6-compat \
    ca-certificates \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Copy workspace root package files
COPY package*.json ./
COPY turbo.json* ./

# Copy frontend package files
COPY apps/frontend/package*.json ./apps/frontend/

# Install dependencies with workspace support
RUN npm install --legacy-peer-deps && \
    npm cache clean --force

# ============================================================
# Stage 2: Builder - Next.js Build
# ============================================================
FROM node:20-alpine AS builder

# Accept build arguments for versioning
ARG GIT_COMMIT_SHA=unknown
ARG BUILD_TIMESTAMP=unknown

# Install build dependencies
RUN apk add --no-cache \
    libc6-compat \
    ca-certificates \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Copy dependencies from deps stage (monorepo has node_modules at root)
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/package*.json ./
COPY --from=deps /app/apps/frontend/package*.json ./apps/frontend/

# Copy frontend application source
COPY apps/frontend ./apps/frontend

# Set build environment
ENV NEXT_TELEMETRY_DISABLED=1 \
    NODE_ENV=production \
    NODE_OPTIONS="--max-old-space-size=3072"

# Build Next.js application from the frontend directory
WORKDIR /app/apps/frontend

# Create public directory if it doesn't exist (prevent COPY errors)
RUN mkdir -p public

# Set build ID environment variables (available during build and runtime)
ENV NEXT_PUBLIC_BUILD_ID=$GIT_COMMIT_SHA \
    NEXT_PUBLIC_BUILD_TIMESTAMP=$BUILD_TIMESTAMP

# Build Next.js application
# Creates .next/standalone with minimal dependencies
RUN npm run build && \
    test -d .next/standalone && \
    echo "âœ“ Build successful" && \
    echo "Build ID: $GIT_COMMIT_SHA" && \
    echo "Timestamp: $BUILD_TIMESTAMP"

# ============================================================
# Stage 3: Production Runtime
# ============================================================
FROM node:20-alpine AS production

# Install runtime dependencies and security updates
RUN apk update && \
    apk upgrade && \
    apk add --no-cache \
    dumb-init \
    curl \
    ca-certificates \
    tzdata \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Create nextjs user for security (non-root)
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nextjs -u 1001 -G nodejs

# Set production environment
ENV NODE_ENV=production \
    NEXT_TELEMETRY_DISABLED=1 \
    PORT=3000 \
    HOSTNAME="0.0.0.0" \
    NODE_OPTIONS="--max-old-space-size=2048"

# Copy public assets (create empty dir if doesn't exist)
RUN mkdir -p ./public
COPY --from=builder --chown=nextjs:nodejs /app/apps/frontend/public ./public

# Copy Next.js standalone build (minimal footprint)
COPY --from=builder --chown=nextjs:nodejs /app/apps/frontend/.next/standalone ./

# Copy static assets
COPY --from=builder --chown=nextjs:nodejs /app/apps/frontend/.next/static ./apps/frontend/.next/static

# Create logs directory
RUN mkdir -p /app/logs && chown -R nextjs:nodejs /app/logs

# Switch to non-root user
USER nextjs

# Expose port
EXPOSE 3000

# Health check (use 127.0.0.1 instead of localhost for IPv4 compatibility)
HEALTHCHECK --interval=30s --timeout=10s --retries=3 --start-period=60s \
    CMD curl -f http://127.0.0.1:3000/api/health || exit 1

# Use dumb-init for proper signal handling
ENTRYPOINT ["dumb-init", "--"]

# Start Next.js using standalone server
# The standalone build puts the server at the root level
CMD ["node", "apps/frontend/server.js"]
