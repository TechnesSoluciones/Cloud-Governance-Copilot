# ============================================================
# API Gateway Production Dockerfile - FIXED VERSION
# Cloud Governance Copilot - Multi-stage Build
# ============================================================
# FIXES:
# 1. Proper tsconfig.json handling (copies root tsconfig)
# 2. Correct build environment (NODE_ENV NOT set to production during build)
# 3. Fixed file paths in production stage
# 4. Added verbose error output for debugging
# ============================================================

# ============================================================
# Stage 1: Dependencies Installation
# ============================================================
FROM node:20-alpine AS deps

# Install required system packages
RUN apk add --no-cache \
    libc6-compat \
    openssl \
    ca-certificates \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Copy package files
COPY apps/api-gateway/package*.json ./

# Copy Prisma schema
COPY apps/api-gateway/prisma ./prisma/

# Install ALL dependencies (dev + production) for build stage
# DO NOT set NODE_ENV=production here - we need devDependencies for TypeScript
RUN npm install --legacy-peer-deps \
    && npm cache clean --force

# Generate Prisma Client
RUN npx prisma generate

# ============================================================
# Stage 2: Builder - TypeScript Compilation
# ============================================================
FROM node:20-alpine AS builder

# Install build dependencies
RUN apk add --no-cache \
    libc6-compat \
    openssl \
    ca-certificates \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/package*.json ./

# CRITICAL FIX: Copy root tsconfig.json that api-gateway extends
COPY tsconfig.json /tsconfig-root.json

# Copy api-gateway source and config
COPY apps/api-gateway/src ./src
COPY apps/api-gateway/tsconfig.json ./tsconfig.json
COPY apps/api-gateway/prisma ./prisma

# Modify tsconfig.json to extend the copied root config
RUN sed -i 's|"extends": "../../tsconfig.json"|"extends": "/tsconfig-root.json"|' tsconfig.json

# Set build environment - DO NOT use NODE_ENV=production (skips devDependencies)
ENV NODE_OPTIONS="--max-old-space-size=2048"

# Verify TypeScript is available and show version
RUN npx tsc --version

# Build TypeScript application with verbose output
RUN npm run build || (echo "=== BUILD FAILED ===" && \
    echo "Checking TypeScript installation:" && \
    npx tsc --version && \
    echo "Listing node_modules:" && \
    ls -la node_modules/.bin/tsc && \
    echo "TypeScript config:" && \
    cat tsconfig.json && \
    echo "Source files:" && \
    find src -type f -name "*.ts" | head -20 && \
    exit 1)

# Verify build output exists
RUN ls -la dist/ && echo "Build successful - dist directory created"

# ============================================================
# Stage 3: Production Runtime
# ============================================================
FROM node:20-alpine AS production

# Install security updates and runtime dependencies
RUN apk update && \
    apk upgrade && \
    apk add --no-cache \
    openssl \
    dumb-init \
    curl \
    ca-certificates \
    tzdata \
    && rm -rf /var/cache/apk/*

WORKDIR /app

# Create app user for security (non-root)
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 -G nodejs

# Set production environment
ENV NODE_ENV=production \
    PORT=4000 \
    NODE_OPTIONS="--max-old-space-size=2048"

# CRITICAL FIX: Copy from correct paths in builder stage
# Builder stage has files at /app/* not /app/apps/api-gateway/*
COPY --from=builder --chown=nodejs:nodejs /app/node_modules ./node_modules
COPY --from=builder --chown=nodejs:nodejs /app/package*.json ./
COPY --from=builder --chown=nodejs:nodejs /app/dist ./dist
COPY --from=builder --chown=nodejs:nodejs /app/prisma ./prisma

# Prune dev dependencies for smaller image (optional but recommended)
RUN npm prune --production

# Create logs directory
RUN mkdir -p /app/logs && chown -R nodejs:nodejs /app/logs

# Switch to non-root user
USER nodejs

# Expose port
EXPOSE 4000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 --start-period=60s \
    CMD curl -f http://localhost:4000/health || exit 1

# Use dumb-init for proper signal handling
ENTRYPOINT ["dumb-init", "--"]

# Start application
CMD ["node", "--enable-source-maps", "dist/index.js"]
